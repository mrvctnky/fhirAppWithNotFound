<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="myhealthapp.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}">
		<content>
					<IconTabBar
					id="iconTabBar"
					class="sapUiResponsiveContentPadding">
							<items>
								<IconTabFilter id="infoTab" text="Info" key="Info">
									<Text text="Information" />
								</IconTabFilter>
								<IconTabFilter id="projectsTab" text="Projects" key="Projects">
									<mvc:XMLView viewName="myhealthapp.view.NotFound"></mvc:XMLView>
								</IconTabFilter>
								<IconTabFilter id="hobbiesTab" text="Hobbies" key="Hobbies">
									<Text text="Hobbies" />
								</IconTabFilter>
								<IconTabFilter id="notesTab" text="Notes" key="Notes">
									<Text text="Notes" />
								</IconTabFilter>
							</items>
					</IconTabBar>
					

					<GenericTile id="myPatientsTile" binding="{/Patient}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="My Patients" press="onNavigateToPatientScreen">
						<TileContent unit="Patients">
							<NumericContent value="{%total%}" icon="sap-icon://stethoscope"/>
						</TileContent>
					</GenericTile>
					<GenericTile id="myOrganizationsTile" binding="{/Observation?patient=smart-8888803}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Total Observations" press="onMyOrganzationsTilePress">
						<TileContent unit="Observations">
							<NumericContent value="{%total%}" icon="sap-icon://org-chart"/>
						</TileContent>
					</GenericTile>
					
		</content>
		<footer>
			<Toolbar>
				<Label text="{i18n>homeFooterText}"/>
			</Toolbar>
		</footer>
	</Page>
</core:View>


